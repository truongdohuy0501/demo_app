<h1> Articles </h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= button_to 'Show', article_path(:id => article.id), :method => :get %></td>
        <td><%= button_to 'Edit', edit_article_path(:id => article.id), :method => :get %></td>
        <td><%= button_to 'Destroy', article_path(:id => article.id), :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<style type="text/css">  
  .button {
    content:attr(data-hover);
    background-color: #d2322d;
    display: inline-block;
    padding: 6px 12px;
    border-radius: 4px;
    color:#fff;
    margin-right:10px;
    margin: 10px 10px;
  }
</style>  